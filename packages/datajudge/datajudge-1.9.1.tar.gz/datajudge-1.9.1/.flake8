# Taken directly from https://github.com/ambv/black/blob/master/.flake8
[flake8]
ignore = E203, E266, E501, W503, C901, D104, D100, D101, D102, D103, D105, D401
max-line-length = 88
max-complexity = 18
select = B,C,E,F,W,T4,B9,D
enable-extensions = flake8-docstrings
per-file-ignores =
    tests/**:D101,D102,D103
    src/datajudge/__init__.py:F401
docstring-convention = numpy
