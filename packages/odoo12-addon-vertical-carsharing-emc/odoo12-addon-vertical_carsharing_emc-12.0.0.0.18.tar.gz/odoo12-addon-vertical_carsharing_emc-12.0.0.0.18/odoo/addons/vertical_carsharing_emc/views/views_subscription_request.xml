<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="subscription_request_form" model="ir.ui.view">
    <field name="name">subscription.request.form</field>
    <field name="model">subscription.request</field>
    <field name="inherit_id" ref="easy_my_coop.subscription_request_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='iban']" position="before">
        <field name="payment_mode_id"/>
      </xpath>
      <xpath expr="//field[@name='already_cooperator']"  position="before">
        <field name="external_obj_id"/>
        <field name="must_register_in_cs"/>
      </xpath>
      <xpath expr="//field[@name='vat']"  position="after">
        <field name="representative_vat" attrs="{'invisible': [('is_company', '!=', True)]}"/>
      </xpath>
      <xpath expr="//field[@name='city']"  position="after">
        <field name="state_id"/>
      </xpath>
      <xpath expr="//field[@name='phone']"  position="after">
        <field name="mobile"/>
      </xpath>
      <xpath expr="//field[@name='lang']"  position="after">
        <field name="driving_license_expiration_date"/>
        <field name="image_dni" widget="url"/>
        <field name="image_driving_license" widget="url"/>
        <field name="validation_cron_executed"/>
      </xpath>
      <xpath expr="//sheet" position="after">
        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers"/>
          <field name="message_ids" widget="mail_thread"/>
        </div>
      </xpath>
      <xpath expr="//notebook" position="inside">
        <page string="CS Registration request">
          <field name="related_registration_ids"/>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
