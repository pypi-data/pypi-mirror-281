# Sync GitHub release notes with the changelog
name: "changerelease"
on:
  workflow_dispatch:
  push:
    branches: ["main"]
    tags: ["*"]
    paths: ["CHANGELOG.md"]
defaults:
  run:
    shell: "pwsh"
jobs:
  changerelease:
    strategy:
      matrix:
        runner: ["{{ actions_runner }}"]
        python: ["{{ python_version }}"]
    permissions:
      contents: "write"
    runs-on: "{% raw %}${{ matrix.runner }}{% endraw %}"
    steps:
      - uses: "dropseed/changerelease@3b121c9e98fa055f59a32b023cb4fd2325f4d9dc" # v1.6.0
        with:
          github_token: "{% raw %}${{ secrets.GITHUB_TOKEN }}{% endraw %}"
          tag_prefix: ""
