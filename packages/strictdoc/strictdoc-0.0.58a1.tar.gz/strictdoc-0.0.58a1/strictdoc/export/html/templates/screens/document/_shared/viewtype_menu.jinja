{%- assert not view_object.standalone -%}
<div class="viewtype">
  <div
    id="viewtype_handler"
    class="viewtype__handler"
    aria-expanded="false"
    aria-controls="viewtype_menu"
  >
    <span>{{ view_object.get_page_title() }}</span>
    {% include "_res/svg_ico16_expand.jinja.html" %}
  </div>
  <menu
    id="viewtype_menu"
    class="viewtype__menu"
    aria-hidden="true"
    aria-labelledby="viewtype_handler"
  >
    <li class="viewtype__menu_header">VIEWS</li>
    <li>
      <a
        data-viewtype_link="document"
        class="viewtype__menu_item"
        title="Go to Document view"
        href="{{ view_object.document.meta.get_root_path_prefix()}}/{{ view_object.document.meta.get_html_doc_link() }}">
      Document</a>
    </li>
    {%- if view_object.project_config.is_activated_table_screen() -%}
    <li>
      <a
        data-viewtype_link="table"
        class="viewtype__menu_item"
        title="Go to Table view"
        href="{{ view_object.document.meta.get_root_path_prefix()}}/{{ view_object.document.meta.get_html_table_link() }}">
      Table</a>
    </li>
    {%- endif -%}
    {%- if view_object.project_config.is_activated_trace_screen() -%}
    <li>
      <a
        data-viewtype_link="traceability"
        class="viewtype__menu_item"
        title="Go to Traceability view"
        href="{{ view_object.document.meta.get_root_path_prefix()}}/{{ view_object.document.meta.get_html_traceability_link() }}">
      Traceability</a>
    </li>
    {%- endif -%}
    {%- if view_object.project_config.is_activated_deep_trace_screen() -%}
    <li>
      <a
        data-viewtype_link="deep_traceability"
        class="viewtype__menu_item"
        title="Go to Deep Traceability view"
        href="{{ view_object.document.meta.get_root_path_prefix()}}/{{ view_object.document.meta.get_html_deep_traceability_link() }}">
      Deep Traceability</a>
    </li>
    {%- endif -%}
    {%- if view_object.project_config.is_activated_standalone_document() -%}
    <li>
      <a
        data-viewtype_link="standalone_document"
        class="viewtype__menu_item"
        title="Go to Standalone Document view"
        href="{{ view_object.document.meta.get_root_path_prefix()}}/{{ view_object.document.meta.get_html_standalone_document_link() }}">
      Standalone</a>
    </li>
    {%- endif -%}
    {%- if view_object.project_config.is_activated_html2pdf() -%}
    <li>
      <a
        data-viewtype_link="html2pdf"
        class="viewtype__menu_item"
        title="Go to PDF view"
        href="{{ view_object.document.meta.get_root_path_prefix()}}/{{ view_object.document.meta.get_html_pdf_link() }}">
      PDF</a>
    </li>
    {%- endif -%}
  </menu>
</div>
